        android:theme="@style/Theme.B07DemoSummer2024"
        tools:targetApi="31">

        <!-- Information Storage -->
        <activity
            android:name=".EmergencyContactsActivity" />
        <activity
            android:name=".EditContactActivity" />
        <activity
            android:name=".DeleteContactActivity" />
        <activity
            android:name=".AddContactActivity" />

        <!-- Documents to Pack -->
        <activity
            android:name=".DocumentActivity" />
        <activity
            android:name=".DocumentDetailActivity" />

        <!-- Safe Locations -->
        <activity
            android:name=".SafeLocationsActivity" />
        <activity
            android:name=".AddSafeLocationActivity" />
        <activity
            android:name=".EditSafeLocationActivity" />
        <activity
            android:name=".DeleteSafeLocationActivity" />

