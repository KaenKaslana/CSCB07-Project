<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <Button
        android:id="@+id/buttonQuestionnaire"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Questionnaire"
        app:layout_constraintBottom_toTopOf="@+id/buttonCategory"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Tips"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tips"
        app:layout_constraintBottom_toTopOf="@+id/buttonCategory"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.814" />

    <Button
        android:id="@+id/buttonCategory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Emergency Info Storage"
        app:layout_constraintTop_toBottomOf="@+id/buttonQuestionnaire"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/buttonReminder"/>

    <Button
        android:id="@+id/buttonReminder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Reminder"
        app:layout_constraintTop_toBottomOf="@+id/buttonCategory"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/buttonSupportConnection"/>

    <Button
        android:id="@+id/buttonSupportConnection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Support Resource"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonReminder" />

</androidx.constraintlayout.widget.ConstraintLayout>
